resources:
- name: {{ env["name"] }}
  type: gcp-types/iam-v1:projects.serviceAccounts
  properties:
    accountId: {{ env["name"] }}
    displayName: "service account for devenv"
  accessControl:
    gcpIamPolicy:
      bindings:
      {% for role in properties["roles"] %}
      - role: {{ role }}
        members:
        - "serviceAccount:{{ env['name'] }}@{{ env['project'] }}.iam.gserviceaccount.com"
      {% endfor %}
